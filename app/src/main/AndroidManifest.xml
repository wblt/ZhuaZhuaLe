<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhuazhuale.changsha">

    <!-- 网络相关权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 此处仅用于获取设备唯一识别号，详见CommonUtil.getDeviceUniqueId() -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 此处仅用于获取设备唯一识别号，详见CommonUtil.getDeviceUniqueId() -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".module.home.ui.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.CollectActivity"></activity>
        <activity android:name=".module.home.ui.MineActivity" />

    </application>

</manifest>